<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.app1.venkatesh.basicphrases.MainActivity">


    <GridLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:columnCount="4"
        android:rowCount="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/button1"
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            android:text="do\nyou\nspeak\nenglish\n?"
            android:layout_columnWeight="1"
            android:tag = "doyouspeakenglish"
            android:onClick="playphrase"
            />

        <Button
            android:id="@+id/button2"
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="good\nevening"
            android:tag = "goodevening"
            android:onClick="playphrase"
            />
        <Button
            android:id="@+id/button3"
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            android:text="hello"
            android:layout_columnWeight="1"
            android:tag = "hello"
            android:onClick="playphrase"
            />
        <Button
            android:id="@+id/button4"
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            android:text="how\nare\nyou"
            android:layout_columnWeight="1"
            android:tag = "howareyou"
            android:onClick="playphrase"
            />

        <Button
            android:id="@+id/button5"
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            android:text="i\nlive\nin"
            android:layout_columnWeight="1"
            android:tag = "ilivein"
            android:onClick="playphrase"
            />
        <Button
            android:id="@+id/button6"
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            android:text="my\nname\nis"
            android:layout_columnWeight="1"
            android:tag = "mynameis"
            android:onClick="playphrase"/>
        <Button
            android:id="@+id/button7"
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            android:text="please"
            android:layout_columnWeight="1"
            android:tag = "please"
            android:onClick="playphrase"/>
        <Button
            android:id="@+id/button8"
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            android:text="welcome"
            android:layout_columnWeight="1"
            android:tag = "welcome"
            android:onClick="playphrase"
            />

    </GridLayout>
</android.support.constraint.ConstraintLayout>
